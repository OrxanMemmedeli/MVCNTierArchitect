
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | Admin</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css">

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>

    <script>
        window.addEventListener("pageshow", function (event) {
            var historyTraversal = event.persisted ||
                (typeof window.performance != "undefined" &&
                    window.performance.navigation.type === 2);
            if (historyTraversal) {
                // Handle page restore.
                window.location.reload(true);
            }
        });
    </script>
</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block" style="margin-left:10px">
                    <a href="/" class="btn btn-outline-danger">Vitrin hissəsinə keçid</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block " style="margin-left:10px">
                    <a href="/Home" class="btn btn-outline-danger">Başlıqlar hissəsinə keçid</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item ">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt text-danger"></i>
                    </a>
                </li>
                <li class="nav-item text-danger">
                    <a class="nav-link" href="/Account/Logout" role="button">
                        <i class="fas fa-power-off text-danger"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/admin" class="brand-link">
                <img src="~/AdminLTE/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light text-warning">ADMİN Panel</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/AdminLTE/dist/img/avatar5.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="/admin" class="d-block">@(Session["AdminUserName"] == null ? "Session aktiv deyil" : Session["AdminUserName"].ToString())</a>
                    </div>
                </div>


                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="/Admin/Category" class="nav-link">
                                <i class="nav-icon text-warning fas fa-align-justify"></i>
                                <p>
                                    Kateqoriyalar
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Writer" class="nav-link">
                                <i class="nav-icon text-warning fas fa-feather-alt"></i>
                                <p>
                                    Yazarlar
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Heading" class="nav-link">
                                <i class="nav-icon text-warning fas fa-heading"></i>
                                <p>
                                    Başlıqlar
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Content" class="nav-link">
                                <i class="nav-icon text-warning fas fa-clipboard-list"></i>
                                <p>
                                    Məzmunlar
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Contact" class="nav-link">
                                <i class="nav-icon text-warning fas fa-inbox"></i>
                                <p>
                                    Mesajlar
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/About" class="nav-link">
                                <i class="nav-icon text-warning fas fa-info-circle"></i>
                                <p>
                                    Haqqımda
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Gallery" class="nav-link">
                                <i class="nav-icon text-warning fas fa-images"></i>
                                <p>
                                    Qalareya
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Chart" class="nav-link">
                                <i class="nav-icon text-warning fas fa-chart-pie"></i>
                                <p>
                                    Qrafiklər
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Admin" class="nav-link">
                                <i class="nav-icon text-warning fas fa-user-cog"></i>
                                <p>
                                    Adminlər
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Role" class="nav-link">
                                <i class="nav-icon text-warning fas fa-lock-open"></i>
                                <p>
                                    İcazələr
                                </p>
                            </a>
                        </li>
                        <li class="nav-header">EXAMPLES</li>
                        <li class="nav-item">
                            <a href="/Showcase/Adress" class="nav-link">
                                <i class="nav-icon text-warning fas fa-sitemap"></i>
                                <p>
                                    Vitrin Panel
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Account/Logout" class="nav-link">
                                <i class="nav-icon text-warning fas fa-sign-out-alt"></i>
                                <p>
                                    Çıxış
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Istatistik" class="nav-link">
                                <i class="nav-icon text-warning fas fa-tachometer-alt"></i>
                                <p>
                                    Odev 2
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Skill/Skill" class="nav-link">
                                <i class="nav-icon text-warning fas fa-tachometer-alt"></i>
                                <p>
                                    Odev 3 (Skills)
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card" style="margin:15px">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0.0
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year - All rights reserved. Developed by <a href="https://orxanmemmedeli.github.io/">Khan</a>.</strong>
        </footer>


    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE/dist/js/demo.js"></script>

    @RenderSection("AdminScripts", false)

</body>
</html>
