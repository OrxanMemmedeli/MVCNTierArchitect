@model IEnumerable<ShowcaseAPI.Models.Entity.About>

<div class="row mt-lg-5 text-dark">

    <div class="col-md-4 address-grid" data-aos="flip-up">
        <div class="address-info">
            <div class=" text-center">
                <i class="far fa-map"></i>
            </div>
            <div class="text-center">
                <h6 class="my-3">Ünvan</h6>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <p>
                            @Html.Raw(item.Adress)
                        </p>
                    }
                }

            </div>
        </div>

    </div>
    <div class="col-md-4 address-grid" data-aos="flip-up">
        <div class="address-info">
            <div class=" text-center">
                <i class="far fa-envelope"></i>
            </div>
            <div class=" text-center">
                <h6 class="my-3">Email</h6>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <p>
                            @Html.Raw(item.Email)
                        </p>
                    }
                }

            </div>

        </div>
    </div>
    <div class="col-md-4 address-grid" data-aos="flip-up">
        <div class="address-info">
            <div class=" text-center">
                <i class="fas fa-mobile-alt"></i>
            </div>
            <div class="text-center">
                <h6 class="my-3">Telefon</h6>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <p>
                            @Html.Raw(item.Number)
                        </p>
                    }
                }

            </div>

        </div>
    </div>
</div>



@if (Model != null)
{
    foreach (var item in Model)
    {
        @Html.Raw(item.Map)
    }
}
