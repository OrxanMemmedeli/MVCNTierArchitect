@model  IEnumerable<EntityLayer.Concrete.Content>
<div class="active tab-pane" id="LastPosts">
    <div class="timeline timeline-inverse">
        <br />
        @if (Model.Count() != 0)
        {
            foreach (var item in Model)
            {
                <!-- timeline time label -->
                <div class="time-label">
                    <span class="bg-danger">
                        @item.Heading.Name
                    </span>
                </div>
                <!-- timeline item -->
                <div>
                    <i class="fas fa-ellipsis-h bg-warning"></i>

                    <div class="timeline-item">
                        <span class="time"><i class="far fa-clock"></i> @(item.CreatedDate.ToShortDateString()) tarixində</span>

                        <h3 class="timeline-header"><a>@item.Writer.Name @item.Writer.Surname</a></h3>

                        <div class="timeline-body">
                            @item.Text
                        </div>
                    </div>
                </div>
                <!-- END timeline item -->
            }
        }
        else
        {
            <div class="time-label">
                <span class="bg-danger">
                    Son 5 gündə heç bir məzmun yazılmamışdır.
                </span>
            </div>
        }


    </div>
</div>

