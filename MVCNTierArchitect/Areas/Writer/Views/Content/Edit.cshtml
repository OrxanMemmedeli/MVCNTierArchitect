@model EntityLayer.Concrete.Content

@{
    ViewBag.Title = "Məzmunu Yenilə";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


@using (Html.BeginForm("Edit", "Content", "Writer", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Məzmunu Yenilə</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.CreatedDate)
        @Html.HiddenFor(model => model.WriterID)
        @Html.HiddenFor(model => model.Status)

        <div class="form-group">
            <label class="control-label">Başlıq</label>
            <div class="col-md-10">
                @Html.DropDownList("HeadingID", (List<SelectListItem>)ViewBag.Headings, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HeadingID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Məzmun</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yenilə" class="btn btn-success" />
                <a href="/Writer/Content" class="btn btn-dark">Geri</a>
            </div>
        </div>
    </div>
}

