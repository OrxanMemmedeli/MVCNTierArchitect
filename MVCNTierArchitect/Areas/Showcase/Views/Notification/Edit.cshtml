@model ShowcaseAPI.Models.Entity.Notification

@{
    ViewBag.Title = "Bildirişi Yenilə";
    Layout = "~/Views/Shared/_ShowcaseLayout.cshtml";
}



@using (Html.BeginForm("Edit", "Notification", "Showcase", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bildirişi Yenilə</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <div class="form-group">
            <p class="control-label col-md-4">Bildiriş</p>

            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yenilə" class="btn btn-success" />
                <a href="/Showcase/Notification" class="btn btn-dark">Geri</a>
            </div>
        </div>
    </div>
}


