@model EntityLayer.Concrete.Adress

@{
    ViewBag.Title = "Ünvanı Yenilə";
    Layout = "~/Views/Shared/_ShowcaseLayout.cshtml";
}


@using (Html.BeginForm("Edit", "Adress", "Showcase", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ünvanı Yenilə</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <p class="control-label col-md-4">Ünvan</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.URL, new { htmlAttributes = new { @class = "form-control", @type = "url" } })
                @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yenilə" class="btn btn-success" />
                <a href="/Showcase/Adress" class="btn btn-dark">Geri</a>
            </div>
        </div>
    </div>
}


