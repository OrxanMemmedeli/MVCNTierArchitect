@model ShowcaseAPI.Models.Entity.About

@{
    ViewBag.Title = "Əlaqə Vasitəsini Yenilə";
    Layout = "~/Views/Shared/_ShowcaseLayout.cshtml";
}


@using (Html.BeginForm("Edit", "About", "Showcase", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Əlaqə Vasitəsini Yenilə</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <p class="control-label col-md-4">Ünvan</p>
            <div class="col-md-10">
                <textarea name="Adress" id="Adress" class="form-control"></textarea>
                @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-4">E-mail</p>
            <div class="col-md-10">
                <textarea name="Email" id="Email" class="form-control"></textarea>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-4">Telefon</p>
            <div class="col-md-10">
                <textarea name="Number" id="Number" class="form-control"></textarea>
                @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-4">Xəritə</p>
            <div class="col-md-10">
                <textarea name="Map" id="Map" class="form-control"></textarea>
                @Html.ValidationMessageFor(model => model.Map, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yenilə" class="btn btn-success" />
                <a href="/Showcase/About" class="btn btn-dark">Geri</a>
            </div>
        </div>
    </div>
}


@section ShowCaseScripts{
    <script src="https://cdn.tiny.cloud/1/5fri9qvj8j8o609qcyj6pujpvy0yexezsf47t8wphcsbcnp1/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>


    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating',
        });
    </script>

}