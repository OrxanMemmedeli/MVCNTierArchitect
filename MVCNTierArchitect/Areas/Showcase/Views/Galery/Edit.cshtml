@model ShowcaseAPI.Models.Entity.Image

@{
    ViewBag.Title = "Məlumatı Yenilə";
    Layout = "~/Views/Shared/_ShowcaseLayout.cshtml";
}


@using (Html.BeginForm("Edit", "Galery", "Showcase", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Məlumatı Yenilə</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.URL)

        <div class="form-group">
            <p class="control-label col-md-4">Ad</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-4">Başlıq</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-4">Şəkil</p>
            <div class="col-md-10">
                <input type="file" name="ImageFile" class="form-control" />
                @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
            </div>
            <hr />
            @if (string.IsNullOrEmpty(Model.URL))
            {
                <span class="mailbox-attachment-icon has-img">
                    <img src="@Model.URL" alt="Attachment">
                </span>
            }
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yenilə" class="btn btn-success" />
                <a href="/Showcase/Galery" class="btn btn-dark">Geri</a>
            </div>
        </div>
    </div>
}


