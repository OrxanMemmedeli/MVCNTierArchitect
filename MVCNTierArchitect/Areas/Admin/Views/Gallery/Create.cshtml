@model EntityLayer.Concrete.ImageFile

@{
    ViewBag.Title = "Şəkil (Şəkilləri) Yüklə";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Create", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Şəkil (Şəkilləri) Yüklə</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Şəkillər
            <div class="col-md-10">
                <input multiple type="file" name="Images" class="form-control" />
                @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Əlavə Et" class="btn btn-success" />
                <a href="/Admin/Gallery/GetAll" class="btn btn-dark">Geri</a>
            </div>
        </div>
    </div>
}

