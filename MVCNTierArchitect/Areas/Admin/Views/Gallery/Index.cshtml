@model IEnumerable<EntityLayer.Concrete.ImageFile>
@{
    ViewBag.Title = "Şəkillər";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/AdminLTE/plugins/ekko-lightbox/ekko-lightbox.css">

<div class="wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h4 class="card-title"><a href="/Admin/Gallery/GetAll">Qalareya</a> </h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var item in Model)
                                {
                                    <div class="col-sm-2">
                                        <a href="@item.URL" data-toggle="lightbox" data-title="@item.Title" data-gallery="gallery">
                                            <img src="@item.URL" class="img-fluid mb-2" alt="@item.Title" />
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

</div>

<!-- Ekko Lightbox -->
<script src="~/AdminLTE/plugins/ekko-lightbox/ekko-lightbox.min.js"></script>
<!-- Page specific script -->
<script>
    $(function () {
        $(document).on('click', '[data-toggle="lightbox"]', function (event) {
            event.preventDefault();
            $(this).ekkoLightbox({
                alwaysShowClose: true
            });
        });
    })
</script>