@model EntityLayer.Concrete.Message
@{
    ViewBag.Title = "Yeni mesaj";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- summernote -->
<link href="~/AdminLTE/plugins/summernote/summernote-bs4.css" rel="stylesheet" />


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yeni mesaj</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <div class="row">

        @Html.Action("MailLeftMenu", "Contact", "Admin")

        <!-- /.col -->
        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Compose New Message</h3>
                </div>

                <!-- /.card-header -->
                @using (Html.BeginForm("Create", "Message", "Admin", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    if (Model != null)
                    {
                        <input type="hidden" @Html.NameFor(x => x.ID) value="@Model.ID" />
                    }
                    else
                    {
                        <div class="card-body">
                            <div class="form-group">
                                <input class="form-control" placeholder="To:" @Html.NameFor(x => x.ReceiverEmail)>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Subject:" @Html.NameFor(x => x.Subject)>
                            </div>
                            <div class="form-group">
                                <textarea id="compose-textarea" class="form-control" style="height: 300px" @Html.NameFor(x => x.MessageText)></textarea>
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fas fa-paperclip"></i> Fayl yüklə
                                    <input type="file" name="attachment">
                                </div>
                                <p class="help-block">Max. 32MB</p>
                            </div>
                        </div>
                    }

                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="float-right">
                            <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Qaralama kimi saxla</button>
                            <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Göndər</button>
                        </div>
                        <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Təmizlə</button>
                    </div>
                }
                <!-- /.card-footer -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- Summernote -->
<script src="~/AdminLTE/plugins/summernote/summernote-bs4.min.js"></script>

<script>
    $(function () {
        //Add text editor
        $('#compose-textarea').summernote()
    })
</script>