@model EntityLayer.Concrete.Content

@{
    ViewBag.Title = "Məzmunu Yenilə";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("Edit", "Content", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Məzmunu Yenilə</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.CreatedDate)

    <div class="form-group">
        <label class="control-label">Başlıq</label>
        <div class="col-md-10">
            @Html.DropDownList("HeadingID", (List<SelectListItem>)ViewBag.Headings, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.HeadingID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label">Yazar</label>
        <div class="col-md-10">
            @Html.DropDownList("WriterID", (List<SelectListItem>)ViewBag.Writers, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.WriterID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Məzmun</label>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Text, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Status</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Status, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Yenilə" class="btn btn-success" />
            <a href="/Admin/Content" class="btn btn-dark">Geri</a>
        </div>
    </div>
</div>
}

