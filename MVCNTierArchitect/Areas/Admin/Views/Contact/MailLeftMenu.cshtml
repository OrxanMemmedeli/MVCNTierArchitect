<div class="col-md-3">
    <a href="/Admin/Message/Create" class="btn btn-primary btn-block mb-3">Yeni Mesaj Yaz</a>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Əsaslar</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0" style="display: block;">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Admin/Contact" class="nav-link">
                        <i class="fas fa-inbox"></i> Kənar Mesajlar
                        <span class="badge bg-success float-right" title="Yeni Mesaj">@ViewData["NewMessageCount"]</span>
                        <span class="badge bg-primary float-right" title="Oxunan Mesaj">✔✔@ViewData["ReadedContactCount"]</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/Admin/Message" class="nav-link">
                        <i class="fas fa-mail-bulk"></i> Daxili Mesajlar
                        <span class="badge bg-success float-right" title="Yeni Mesaj">@ViewData["NewSystemMessageCount"]</span>
                        <span class="badge bg-primary float-right" title="Oxunan Mesaj">✔✔@ViewData["ReadedMessageCount"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Admin/Message/Sent" class="nav-link">
                        <i class="far fa-envelope"></i> Göndərilmiş
                        <span class="badge bg-secondary float-right" title="Göndərilmiş Mesaj">@ViewData["SentMessageCount"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Admin/Message/Drafts" class="nav-link">
                        <i class="far fa-file-alt"></i> Qaralamalar
                        <span class="badge bg-secondary float-right" title="Qaralama Mesaj">@ViewData["DraftMessageCount"]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-filter"></i> Spam
                        <span class="badge bg-warning float-right">65</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Admin/Message/Deleteds" class="nav-link">
                        <i class="far fa-trash-alt"></i> Silinmiş
                        <span class="badge bg-warning float-right">@ViewData["DeletedMessageCount"]</span>

                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
