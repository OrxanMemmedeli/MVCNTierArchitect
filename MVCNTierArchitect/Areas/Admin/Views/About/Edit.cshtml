@model EntityLayer.Concrete.About

@{
    ViewBag.Title = "Haqqımızda məlumatlarını Yenilə";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("Edit", "About", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Haqqımızda məlumatlarını Yenilə</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <label>Haqqımda mətni (birinci)</label>
            <div class="col-md-10">
                <textarea type="text" name="DetailsFirst" class="form-control">@(Model.DetailsFirst != null ? Model.DetailsFirst : "")</textarea>
                @*<input type="text" name="DetailsFirst" class="form-control" value="@Model.DetailsFirst" />*@
            </div>
        </div>

        <div class="form-group">
            <label>Haqqımda mətni (ikinci)</label>
            <div class="col-md-10">
                <textarea type="text" name="DetailsSecond" class="form-control">@(Model.DetailsSecond != null ? Model.DetailsSecond : "")</textarea>
                @*<input type="text" name="DetailsSecond" class="form-control" value="@Model.DetailsFirst" />*@
            </div>
        </div>

        <div class="form-group">
            <label>Haqqımda şəkli (birinci)</label>
            <div class="col-md-10">
                <input type="file" name="imageFileFirst" class="form-control" accept="image/png, image/gif, image/jpeg, image/jpg" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(Model.İmageFirst))
                {
                    <img src="@Model.İmageFirst" alt="DetailsFirst" class="img-circle img-fluid" style="max-width:300px">
                }
            </div>
        </div>
        <div class="form-group">
            <label>Haqqımda şəkli (ikinci)</label>
            <div class="col-md-10">
                <input type="file" name="imageFileSecond" class="form-control" accept="image/png, image/gif, image/jpeg, image/jpg" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @if (!string.IsNullOrEmpty(Model.İmageSecond))
                {
                    <img src="@Model.İmageSecond" alt="DetailsSecond" class="img-circle img-fluid" style="max-width:300px">
                }
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Status)
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yenilə" class="btn btn-success" />
                <a href="/Admin/About" class="btn btn-dark">Geri</a>
            </div>
        </div>
    </div>
}


