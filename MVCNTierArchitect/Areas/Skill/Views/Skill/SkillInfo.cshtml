@model IEnumerable<EntityLayer.Concrete.SkillInfo>




@if (Model.Count() == 0)
{
    <p>
        <a href="/Skill/Skill/CreateInfo" class="btn btn-primary">Haqqımda Məlumatları yaz</a>
    </p>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>
                Ad-Soyad
            </th>
            <th>
                Vəzifə
            </th>
            <th>
                Haqqımda
            </th>
            <th>
                Foto
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.About)
                </td>
                <td>
                    <img src="@item.ImageURL" alt="Alternate Text" style="width:150px; height:150px" />
                </td>
                <td>
                    <a href="/Skill/Skill/EditInfo/@item.ID" class="badge badge-success" title="düzəliş et"><i class="fas fa-edit"></i></a> |
                    <a class="badge badge-danger" title="Sil" onclick="DeleteInfo(@item.ID)"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }

    </table>
}


<script>
    function DeleteInfo(id) {
        var url = "/Skill/Skill/DeleteInfo/" + id;
        if (confirm("Silmək isdədiyinizdən əminsinizmi?")) {
            window.open(url, '_self');
        } else {
            window.open('/Skill/Skill/Details', '_self');
        }
    };
</script>